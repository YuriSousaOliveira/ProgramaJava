			public void actionPerformed(ActionEvent arg0) {
				Problemas pag2 = new Problemas();  
	             pag2.setVisible(true);
	             pag2.setExtendedState(JFrame.MAXIMIZED_BOTH);
	             dispose();
			}
		});
